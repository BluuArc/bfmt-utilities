{
  "name": "bfmt-utilities",
  "version": "0.0.1",
  "description": "Set of utility functions used by the BFMT project. This is a separate repository for them because they are usable outside of BFMT.",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jasmine --config=spec/jasmine.json",
    "check-types": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:es": "tsc",
    "build:js": "webpack --mode=production",
    "gulp": "gulp --gulpfile tasks/index.js",
    "clean:app": "npm run gulp -- clean:app",
    "clean:docs": "npm run gulp -- clean:docs",
    "build:docs": "typedoc --options typedoc.config.js --theme minimal --out docs src/",
    "build:app": "npm run build:types && npm run gulp -- build:app",
    "build": "npm run build:app && npm run build:docs",
    "clean": "npm run gulp -- clean:app clean:docs"
  },
  "author": "Joshua Castor",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.6",
    "documentation": "^11.0.1",
    "eslint-plugin-jasmine": "^2.10.1",
    "fancy-log": "^1.3.3",
    "fork-ts-checker-webpack-plugin": "^1.3.7",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "jasmine": "^3.4.0",
    "through2": "^3.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-stream": "^5.2.1"
  }
}
