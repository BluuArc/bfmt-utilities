{
  "name": "@bluuarc/bfmt-utilities",
  "version": "0.7.0",
  "description": "Set of utility functions used by the BFMT project. This is a separate repository for them because they are usable outside of BFMT.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "gulp": "gulp --gulpfile tasks/index.js",
    "build:dirty": "npm run gulp -- build:dirty",
    "build": "npm run gulp -- build",
    "build:docs": "typedoc --options typedoc.config.js src/",
    "dev": "npm run gulp -- dev",
    "dev:single-run": "npm run cleanup:coverage && npm run lint && npm run coverage",
    "lint": "npm run lint:app && npm run lint:non-app",
    "lint:app": "eslint -c .eslintrc.ts.js --ext .ts src",
    "lint:non-app": "npm run lint:tasks && npm run lint:tests",
    "lint:tasks": "eslint -c .eslintrc.js tasks",
    "lint:tests": "eslint -c .eslintrc.js src/**/*.spec.js && eslint -c .eslintrc.js src/_test-helpers",
    "test": "npm run coverage:build-js && jasmine --config=jasmine.json",
    "coverage": "npm run coverage:build-js && npm run coverage:run-tests",
    "coverage:build-js": "tsc -p tsconfig.coverage.json",
    "coverage:run-tests": "nyc jasmine --config=jasmine.coverage.json",
    "cleanup:coverage": "npm run gulp -- cleanup:coverage",
    "update:data": "npm run gulp -- update:data",
    "prepublishOnly": "npm run build",
    "preversion": "npm run coverage",
    "version": "npm run build && git add -A",
    "postversion": "echo review changes before pushing"
  },
  "author": "Joshua Castor",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@istanbuljs/schema": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-jasmine": "^4.1.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-execa": "^2.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.3.2",
    "gulp-typedoc": "^2.2.5",
    "gulp-typescript": "^5.0.1",
    "jasmine": "^3.6.1",
    "nyc": "^15.1.0",
    "puppeteer": "^4.0.1",
    "rollup": "^2.23.1",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^3.9.7"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BluuArc/bfmt-utilities.git"
  }
}
