{
  "name": "@bluuarc/bfmt-utilities",
  "version": "0.0.1",
  "description": "Set of utility functions used by the BFMT project. This is a separate repository for them because they are usable outside of BFMT.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "gulp": "gulp --gulpfile tasks/index.js",
    "dirty-build": "npm run gulp -- dirty-build",
    "build": "npm run gulp -- build",
    "build-docs": "typedoc --options typedoc.config.js --theme markdown --out docs src/",
    "dev": "npm run gulp -- dev",
    "lint": "npm run lint-app && npm run lint-non-app",
    "lint-app": "eslint -c .eslintrc.ts.js --ext .ts src",
    "lint-non-app": "npm run lint-tasks && npm run lint-tests",
    "lint-tasks": "eslint -c .eslintrc.js tasks",
    "lint-tests": "eslint -c test/.eslintrc.js test",
    "test": "jasmine --config=test/jasmine.json",
    "coverage": "tsc -p tsconfig.coverage.json && nyc jasmine --config=test/jasmine.coverage.json",
    "cleanup-coverage": "npm run gulp -- cleanup-coverage",
    "update-data": "npm run gulp -- update-data",
    "prepublishOnly": "npm run build"
  },
  "author": "Joshua Castor",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-transform-typescript": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/register": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-plugin-jasmine": "^4.0.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-run": "^1.7.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "gulp-typedoc": "^2.2.3",
    "gulp-typescript": "^5.0.1",
    "jasmine": "^3.5.0",
    "nyc": "^14.1.1",
    "puppeteer": "^2.0.0",
    "rollup": "^1.27.0",
    "typedoc": "^0.15.3",
    "typedoc-plugin-markdown": "^2.2.11",
    "typescript": "^3.7.2"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BluuArc/bfmt-utilities.git"
  }
}
